<Window x:Class="SeeBut.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeeBut"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <StackPanel.Background>
            <ImageBrush ImageSource="/SeeBut;component/Images/see.gif" />
        
        </StackPanel.Background>
        <Button x:Name="button1" Style ="{DynamicResource PlayBut}" Width="60" Height="60" Content="Начать" Click="Button_Click" />

        <UniformGrid 
            Columns="10" Rows="10" 
            Name="uniformGrid1" 
            Width="200" Height="200" 
            Background="Transparent">
        </UniformGrid>

        <TextBlock x:Name="infoBlocK" />
    </StackPanel>
</Window> 
